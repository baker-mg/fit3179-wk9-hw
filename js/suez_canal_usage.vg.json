{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"width": 800,
	"height": 600,
	"title": { "text": "Suez Canal Usage" },
	"projection": { "type": "equalEarth" },
    "layer":[
        {
            "data": {
                "url": "data/world-topo.json",
                "format": {
                    "type": "topojson",
                    "feature": "custom.geo"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {"data": {
            "url": "data/world-topo.json",
            "format": {
                "type": "topojson",
                "feature": "custom.geo"
            }
        },
        "transform": [
            {
                "lookup": "properties.name",
                "from": {
                    "data": {
                        "url": "data/data.csv"
                    },
                    "key": "Country",
                    "fields": ["CargoTon", "CanalSide"]
                }
            }
        ],
        "mark": {
            "type": "geoshape"
        },
        "encoding": {
            "color": {
                "field": "CargoTon",
                "type": "quantitative"
            },
            "tooltip": [
                { "field": "properties.name", "type": "nominal", "title": "Country" },
                {"field": "CanalSide", "type": "nominal", "title": "Canal Side"},
                { "field": "CargoTon", "type": "quantitative" }
            ]}
        }
    ]    
}
